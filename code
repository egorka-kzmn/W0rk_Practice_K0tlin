// Задание 2
let num1 = 5; // Числовая переменная
let char = 'F'; // Строковая переменная (один символ)
let hi = 'Привет'; 
let num2 = 90.2;// Числовая переменная с плавающей точкой
const loki = 67; // По условию задачи эту переменную нельзя изменять
//Вывод в окне
alert(`Задание 2: 
1. Создать переменные со значениями: 5, F, Привет, 90.2
2. Создать неизменяемую переменную со значением 67
3. Вывести переменную со значением "Привет"

Ответ:\n${hi}`); // \n - перенос строки, ${hi} - значение переменной hi


// Задание 3
let number = prompt("Задание 3: Введите число из 4 цифр:");
// Разделяем число на отдельные символы (цифры)
let digits = number.split('');
// Приводим массив цифр к строке, разделяя запятыми
let result = digits.join(', ');
// Выводим результат в виде окна alert с заданием
alert(`Вы ввели число: ${number}\nРезультат: ${result}`);



// Задание 4
let Days1 = 2642; // Исходное значение по условию задачи
// Используем Math.floor() для округления в меньшую сторону
let years = Math.floor(Days1 / 365);
// Используем оператор % для получения остатка от деления
let remaining = Days1 % 365;
//Делим оставшиеся дни на 7 (дней в неделе) - Math.floor() для округления
let weeks = Math.floor(remaining / 7);
// Последний остаток от деления на 7
let days = remaining % 7;
let result4 = `Лет: ${years}, недель: ${weeks}, дней: ${days}`;
// Выводим результат в диалоговом окне:
alert(`Задание 4 : 2642 дня записано в переменной.\nРезультат: ${result4}`);



// Задание 5
// Запрашиваем ввод числа у пользователя
let n = prompt("Задание 5:\nСоздайте программу, которая будет принимать число (n), введенное пользователем, и выдавать результат в виде (n + n * 2)\n\nВведите число:");
// Вычисляем результат
let result5 = n + (n * 2);
// Выводим результат через alert
alert(`Результат: ${result5}`);


// Задание 6
//имя у пользователя
let name6 = prompt("Задание 6:\nВыведите полученные данные в формате: «Привет, ИМЯ! Тебе уже ВОЗРАСТ»\n\nВведите ваше имя:");
//возраст у пользователя
let age6 = prompt("Задание 6:\nВыведите полученные данные в формате: «Привет, ИМЯ! Тебе уже ВОЗРАСТ»\n\nВведите ваш возраст:");
//переменная message где будет лежать сообщение для пользователя 
let message6 = "Привет, " + name6 + "! Тебе уже " + age6;
// Выводим сообщение через alert
alert(message6);
